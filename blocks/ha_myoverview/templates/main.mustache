{{!
    @template block_myoverview/main

    This template renders the main content area for the ha_myoverview block.

    Example context (json):
    {}
}}

<div id="block-myoverview-{{uniqid}}" class="block-myoverview" data-region="myoverview">
    <ul id="block-myoverview-view-choices-{{uniqid}}" class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link {{#allcourses}}active{{/allcourses}}" href="#myoverview_all_courses_view" role="tab" data-toggle="tab" data-tabname="all-courses">
                {{#str}} allcourses, block_ha_myoverview {{/str}}
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{#viewingcourses}}active{{/viewingcourses}}" href="#myoverview_courses_view" role="tab" data-toggle="tab" data-tabname="courses">
                {{#str}} mycourses, block_ha_myoverview {{/str}}
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{#viewingpathways}}active{{/viewingpathways}}" href="#myoverview_pathways_view" role="tab" data-toggle="tab" data-tabname="pathways">
                {{#str}} pathways, block_ha_myoverview {{/str}}
            </a>
        </li>
    </ul>
    <div class="tab-content content-centred">
        <div role="tabpanel" class="tab-pane fade {{#allcourses}}in active{{/allcourses}}" id="myoverview_all_courses_view">
            {{#allcoursesview}}
                {{> theme_snap/all-courses-view }}
            {{/allcoursesview}}
        </div>
        <div role="tabpanel" class="tab-pane fade {{#viewingcourses}}in active{{/viewingcourses}}" id="myoverview_courses_view">
            {{#coursesview}}
                {{> block_myoverview/courses-view }}
            {{/coursesview}}
        </div>
        <div role="tabpanel" class="tab-pane fade {{#viewingpathways}}in active{{/viewingpathways}}" id="myoverview_pathways_view">
            {{#pathwaysview}}
                {{> block_myoverview/pathways-view }}
            {{/pathwaysview}}
        </div>
    </div>
</div>
{{#js}}
require(['jquery', 'block_myoverview/tab_preferences'], function($, TabPreferences) {
    var root = $('#block-myoverview-view-choices-{{uniqid}}');
    TabPreferences.registerEventListeners(root);
});
{{/js}}
